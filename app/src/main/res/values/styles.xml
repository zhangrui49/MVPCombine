<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 状态栏和标题栏颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 溢出菜单图标颜色-->
        <item name="colorControlNormal">@android:color/white</item>
        <!-- 左边箭头 -->
        <item name="drawerArrowStyle">@style/ArrowStyle</item>
        <!-- 溢出菜单文字颜色-->
        <item name="textAppearanceLargePopupMenu">@style/MenuStyle</item>
        <!-- menu字体颜色-->
        <item name="android:actionMenuTextColor">@android:color/black</item>
        <!-- textColor 定义标题文字的颜色 -->
        <item name="android:textColorPrimary">@android:color/white</item>

    </style>

    <style name="ArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="MenuStyle" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="expandedTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="TextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
